@import "/dist/tabbar/index.wxss";

page {
    background-color: #f3f3f3;
}

.page {
    padding-bottom: 140rpx;
}

/**
 * 用户信息
 */

.hd {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
    background-color: #fff;
    border-bottom: 1px solid #e5e5e5;
}

.hd .avatar {
    overflow: hidden;
    width: 160rpx;
    height: 160rpx;
    margin-bottom: 10rpx;
    border-radius: 50%;
}

.hd .avatar image {
    height: 100%;
}

.hd .p {
    display: flex;
	align-items: center;
	font-size: 36rpx;
}

.hd .p image {
    width: 30rpx;
    margin-left: 10rpx;
    margin-right: 5px;
}

.hd .p text:last-child {
	align-self: flex-end;
    color: #d0257a;
	font-size: 28rpx;
}

/**
 * 订单分类
 */

.bd .order {
    margin-top: 10rpx;
    background-color: #fff;
    color: #626262;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    font-size: 30rpx;
}

.bd .order .order-hd {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 40rpx;
    border-bottom: 1px solid #e5e5e5;
}

.bd .order .order-bd {
    display: flex;
}

.bd .order .order-bd .btn {
    position: relative;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 0;
}

.bd .order .order-bd .btn .label {
    position: absolute;
    top: 20rpx;
    left: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 26rpx;
    height: 26rpx;
    margin-left: 20rpx;
    background-color: #7f0d26;
    color: #fff;
    border-radius: 50%;
    font-size: 10px;
}

.bd .order .order-bd .btn image {
    width: 60rpx;
    height: 60rpx;
}

/**
 * 列表
 */

.list .li {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    margin-top: 10rpx;
    padding: 0 40rpx;
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
}

.list .li image {
    width: 40rpx;
	height: 40rpx;
    margin-right: 20rpx;
}

.list .li .p {
    flex: 1;
    color: #626262;
    font-size: 30rpx;
}

.list .li .arrow-right {
    width: 12px;
    height: 12px;
    border-width: 2px 2px 0 0;
    border-color: #5e5e5e;
    border-style: solid;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.list .li button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
