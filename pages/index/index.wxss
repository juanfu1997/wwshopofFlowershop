@import "/dist/tabbar/index.wxss";

.page {
    padding-bottom: 120rpx;
}

.hd {
    position: relative;
    min-height: 382rpx;
}

/**
 * 轮播图
 */

.hd swiper {
    width: 100%;
    height: 382rpx;
}

/**
 * 优惠券
 */

.bd .cardList {
    overflow-x: scroll;
    display: flex;
    min-height: 160rpx;
    padding: 20rpx 10rpx;
    background-color: #fff;
}

.cardList .li {
    position: relative;
    flex: 0 0 33.33%;
    padding: 0 10rpx;
}

.cardList .li .info {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    width: 100%;
    height: 100%;
    color: #fff;
    line-height: 1;
}

.cardList .li .info .info-l {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 38%;
    padding-left: 10rpx;
}

.cardList .li .info .info-r {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-top: 26rpx;
}

.cardList .li .info .info-r .p {
    font-size: 20rpx;
}

.cardList .li .info .info-r .h2 {
    font-size: 32rpx;
    font-weight: bold;
}

.cardList .li .info .info-r .label {
    width: 120%;
    height: 40rpx;
    background-color: #fff;
    color: #c90265;
    border-radius: 20rpx;
    font-size: 30rpx;
    line-height: 40rpx;
    text-align: center;
    transform: scale(0.5);
    transform-origin: 0 0;
}

/**
 * 推荐图
 */

.bd .recommend_title {
    height: 80rpx;
    background-color: #eff3f6;
    color: #c90265;
    border-bottom: 1px solid #e5e5e5;
    font-size: 34rpx;
    line-height: 80rpx;
    text-align: center;
}

.bd .recommend_pic {
    min-height: 300rpx;
    margin-top: 20rpx;
    padding: 0 20rpx;
}
