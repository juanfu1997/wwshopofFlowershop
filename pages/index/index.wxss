/**
 * 推荐产品列表
 */

.bd .list {
    display: flex;
    flex-wrap: wrap;
    min-height: 300rpx;
    padding: 20rpx 15rpx;
    border-top: 2rpx solid red;
    border-bottom: 2rpx solid red;
}

.list .li {
    flex: 0 0 25%;
    margin-bottom: 14rpx;
    padding: 0 5rpx;
    color: #2a2a2a;
}

.list .li .info {
	margin-top: 10rpx;
    font-size: 26rpx;
    line-height: 30rpx;

}
.list .li .info .title{
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.list .li .info .price {
	margin-top: 10rpx;
    font-size: 32rpx;
    line-height: 40rpx;
}
