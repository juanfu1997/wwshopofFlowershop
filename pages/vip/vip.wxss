page {
    background-color: #f2f2f2;
}

.page {
    padding-bottom: 20rpx;
}

.hd {
    padding: 20rpx 6%;
}

.hd .card {
    position: relative;
}

.hd .card .card_no {
    position: absolute;
    top: 31%;
    left: 0;
	display: flex;
	justify-content: center;
	align-items: center;
    width: 100%;
    height: 76rpx;
    font-size: 44rpx;
    font-weight: bold;
}

.hd .card .card_name {
    position: absolute;
    bottom: 30rpx;
    right: 40rpx;
    color: #fff;
    font-size: 30rpx;
}

/**
 * 列表
 */

.list .li {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 120rpx;
    margin-top: 10rpx;
    padding: 0 40rpx;
    background-color: #fff;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
    color: #626262;
    font-size: 30rpx;
}

.list .li image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.list .li .name {
    flex: 1;
}

.list .li .value {
    font-size: 34rpx;
}

.list .li .arrow-right {
    width: 12px;
    height: 12px;
    border-width: 2px 2px 0 0;
    border-color: #5e5e5e;
    border-style: solid;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.list .li button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
