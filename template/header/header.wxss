.header {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    width: 100%;
    height: 86rpx;
    background-color: rgb(251,94,94);
    color: #fff;
    text-align: center;
}

.header text {
    font-size: 34rpx;
    line-height: 86rpx;
}

.header .icon {
    position: absolute;
    top: 0;
    padding: 20rpx 40rpx;
}

.header .icon image {
    width: 46rpx;
    height: 46rpx;
}

.header .i-back {
    left: 0;
}

.header .i-search, .header .i-home {
    right: 0;
}

image {
   margin: 0 auto;
}
